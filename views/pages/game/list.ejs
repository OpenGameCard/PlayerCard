<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>

    <div class="container-fluid scenario" id="scenario">
        <div class="container">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/welcome">Tablica</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Scenariusze</li>
                </ol>
            </nav>

            <% _.each(games, function (game) { %>
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col col-6">
                                <ul class="nav nav-pills card-header-pills">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/game/show/<%= game.id %>">
                                            <%= game.title %>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col col-6">
                                <ul class="nav nav-pills card-header-pills float-right">
                                    <li class="nav-item">
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h3>Ilość map:
                            <%= game.maps.length %>
                        </h3>
                        <ul>
                            <% _.each(game.maps, function (map) { %>
                                <li>
                                    <a href="/game/show/<%= game.id %>/map/<%= map.id %>/show">
                                        <%= map.name %>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                        <hr/>
                        <a href="/game/show/<%= game.id %>/map/new">Dodaj nową mapę dla scenariusza</a>
                    </div>
                    <div class="card-body">
                        <h3>Inne informacje:</h3>
                    </div>

                </div>
                <% }) %>

                    <hr>
                    <a href="/game/new">Dodaj nową...</a>
        </div>
    </div>