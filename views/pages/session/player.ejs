<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>

<div class="container-fluid session-player" id="session-player">

    <% if (session.characters.length === 1) { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                   aria-selected="true">Mapa taktyczna</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                   aria-controls="profile"
                   aria-selected="false">Karta postaci</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="log-tab" data-toggle="tab" href="#log" role="tab" aria-controls="log"
                   aria-selected="false">Dziennik</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                <div class="container-fluid">
                    <form>
                        <label for="characterID">characterID</label><input id="characterID" value="0">
                        <label for="mapID">mapID</label><input id="mapID" value="1">
                        <label for="pawnsID">pawnsID</label><input id="pawnsID" value="1">
                    </form>
                </div>

                <div class="container-fluid" id="map_container" style="margin-top: 1pc;">
                    <canvas id="demo" width="1025" height="769"></canvas>
                </div>

            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <%- partial('../sheet/single') %>
            </div>
            <div class="tab-pane fade show" id="log" role="tabpanel" aria-labelledby="log-tab">Dziennik sesji
            </div>
        </div>
    <% } else { %>
        <h2>Przypisz postaÄ‡ do sesji:</h2>

        <ul>
            <% _.each(availableCharacters, function (character) { %>
                <li><a href="<%= session.id %>/select/character/<%= character.id %>"><%= character.name %></a></li>
            <% }) %>
        </ul>

    <% } %>

</div>
